@model Home.DTOs.CustomerDto
@{
    ViewBag.Title = "Delete Customer";
}

<h2 class="mb-3 text-center fw-bold">Delete Customer</h2>

<div class="row">
    <div class="col-12 col-md-6 mx-auto">
        <div class="alert alert-danger" role="alert">
            @if (ViewBag.CustomerHasOrders != null && ViewBag.CustomerHasOrders == true)
            {
                @:⚠ Customer <strong>@Model.Name</strong> has existing orders and cannot be deleted.
            }
            else
            {
                @:Are you sure you want to delete this customer? This action cannot be undone.
            }
        </div>

        <div class="card mb-3">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.Email) ? Model.Email : "-")</dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.PhoneNumber) ? Model.PhoneNumber : "-")</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.Address) ? Model.Address : "-")</dd>

                    <dt class="col-sm-4">Contact</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.ContactPerson) ? Model.ContactPerson : "-")</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-2 d-flex justify-content-start">
            <input type="hidden" asp-for="CustomerId" />
            <button type="submit" class="btn btn-danger me-2 delete-link" @(ViewBag.CustomerHasOrders == true ? "disabled" : "")>Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@model Home.DTOs.CustomerOrderDto
@{
    ViewBag.Title = "Order Details";
}

<h2 class="mb-3 text-center fw-bold">Order Details</h2>

<div class="row">
    <div class="col-12 col-md-8 mx-auto">
        <div class="card mb-3">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Order Number</dt>
                    <dd class="col-sm-9">@Model.OrderNumber</dd>

                    <dt class="col-sm-3">Order Date</dt>
                    <dd class="col-sm-9">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-3">Customer</dt>
                    <dd class="col-sm-9">
                        <a asp-controller="Customers" asp-action="Details" asp-route-id="@Model.CustomerId">
                            @Model.CustomerName
                        </a>
                    </dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@Model.OrderStatus</dd>

                    <dt class="col-sm-3">Notes</dt>
                    <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Notes) ? Model.Notes : "-")</dd>
                </dl>
            </div>
        </div>
        @{
            double grandTotal = 0;
        }
        <div class="card mb-3">
            <div class="card-header fw-bold">Items</div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th class="col-w5">No.</th>
                                <th class="col-w20">Product Code</th>
                                <th class="col-w30"> Product Name</th>
                                <th class="col-w15 text-end">Quantity</th>
                                <th class="col-w15 text-end">Unit Price</th>
                                <th class="col-w15 text-end">Line Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                int quantity = item.Quantity;
                                double unitPrice = (double)item.UnitPrice;
                                double lineTotal = quantity * unitPrice;
                                grandTotal += lineTotal;
                                <tr>
                                    <td>@item.ItemNumber</td>
                                    <td>@item.ProductCode</td>
                                    <td>@(string.IsNullOrWhiteSpace(item.ProductName) ? "-" : item.ProductName)</td>
                                    <td class="text-end">@quantity</td>
                                    <td class="text-end">@unitPrice.ToString("F2")</td>
                                    <td class="text-end">@(lineTotal.ToString("F2"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end mb-3">
            <div class="fw-bold fs-5">
                Grand Total: <span class="ms-4 me-1">@grandTotal.ToString("F2")</span>
            </div>
        </div>
        <div class="mt-2 d-flex justify-content-start">
            <a class="btn btn-outline-primary me-2" asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a>
            <a class="btn btn-outline-danger me-2" asp-action="Delete" asp-route-id="@Model.OrderId">Delete</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

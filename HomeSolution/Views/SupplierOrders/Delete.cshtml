@model Home.DTOs.SupplierOrderDto
@{
    ViewBag.Title = "Delete Supplier Order";
}

<h2 class="mb-3 text-center fw-bold">Delete Supplier Order</h2>

<div class="row">
    <div class="col-12 col-md-8 mx-auto">
        <div class="alert alert-danger" role="alert">
            Are you sure you want to delete this order? This action cannot be undone.
        </div>

        <div class="card mb-3">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Order Number</dt>
                    <dd class="col-sm-9">@Model.OrderNumber</dd>

                    <dt class="col-sm-3">Order Date</dt>
                    <dd class="col-sm-9">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-3">Supplier</dt>
                    <dd class="col-sm-9">@Model.SupplierName</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@Model.OrderStatus</dd>

                    <dt class="col-sm-3">Notes</dt>
                    <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Notes) ? Model.Notes : "-")</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-2 d-flex justify-content-start">
            <input type="hidden" name="SupplierOrderId" value="@Model.OrderId" />
            <button type="submit" class="btn btn-danger me-2 delete-link">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

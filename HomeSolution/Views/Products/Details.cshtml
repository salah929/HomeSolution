@model Home.DTOs.ProductDto
@{
    ViewBag.Title = "Product Details";
}

<h2 class="mb-3 text-center fw-bold">Product Details</h2>

<div class="row">
    <div class="col-12 col-md-6 mx-auto">
        <div class="card mb-3">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Code</dt>
                    <dd class="col-sm-9">@Model.Code</dd>

                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Name) ? Model.Name : "-")</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description : "-")</dd>

                    <dt class="col-sm-3">Supplier</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrWhiteSpace(Model.SupplierName))
                        {
                            <a asp-controller="Suppliers" asp-action="Details" asp-route-id="@Model.SupplierId"> @Model.SupplierName</a>
                        }
                        else
                        {
                            @("-")
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-2 d-flex justify-content-start">
            <a class="btn btn-outline-primary me-2" asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a>
            <a class="btn btn-outline-danger me-2" asp-action="Delete" asp-route-id="@Model.ProductId">Delete</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@model Home.DTOs.SupplierDto
@{
    ViewBag.Title = "Supplier Details";
}

<h2 class="mb-3 text-center fw-bold">Supplier Details</h2>

<div class="row">
    <div class="col-12 col-lg-8 mx-auto">
        <div class="card mb-3">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.Email) ? Model.Email : "-")</dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.PhoneNumber) ? Model.PhoneNumber : "-")</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.Address) ? Model.Address : "-")</dd>

                    <dt class="col-sm-4">Contact</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.ContactPerson) ? Model.ContactPerson : "-")</dd>
                </dl>
            </div>
        </div>

        <div class="mt-2 d-flex justify-content-start">
            <a class="btn btn-outline-primary me-2" asp-action="Edit" asp-route-id="@Model.SupplierId">Edit</a>
            <a class="btn btn-outline-danger me-2" asp-action="Delete" asp-route-id="@Model.SupplierId">Delete</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>

        <!-- Orders -->
        <div class="card mt-3">
            <div class="card-header fw-bold d-flex justify-content-between align-items-center">
                @Model.Name - Orders
                <a class="btn btn-success" asp-controller="SupplierOrders" asp-action="Create"
                   asp-route-supplierid="@Model.SupplierId" asp-route-s=true>Create Order</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th class="col-w20">Number</th>
                                <th class="col-w20">Date</th>
                                <th class="col-w30">Status</th>
                                <th class="col-w30">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var o in Model.Orders)
                            {
                                <tr>
                                    <td>@o.OrderNumber</td>
                                    <td>@o.OrderDate.ToString("yyyy-MM-dd")</td>
                                    <td>@o.OrderStatus</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a class="btn btn-sm btn-outline-secondary flex-fill"
                                               asp-controller="SupplierOrders" asp-action="Details" asp-route-id="@o.OrderId">Details</a>
                                            <a class="btn btn-sm btn-outline-primary flex-fill"
                                               asp-controller="SupplierOrders" asp-action="Edit" asp-route-id="@o.OrderId" asp-route-s=true>Edit</a>
                                            <a class="btn btn-sm btn-outline-danger flex-fill"
                                               asp-controller="SupplierOrders" asp-action="Delete" asp-route-id="@o.OrderId">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Products -->
        <div class="card mt-3">
            <div class="card-header fw-bold">@Model.Name - Products</div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th class="col-w20">Code</th>
                                <th class="col-w50">Name</th>
                                <th class="col-w30">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.Products)
                            {
                                <tr>
                                    <td>@p.Code</td>
                                    <td>@(string.IsNullOrWhiteSpace(p.Name) ? "-" : p.Name)</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a class="btn btn-sm btn-outline-secondary flex-fill" asp-controller="Products" asp-action="Details" asp-route-id="@p.ProductId">Details</a>
                                            <a class="btn btn-sm btn-outline-primary flex-fill" asp-controller="Products" asp-action="Edit" asp-route-id="@p.ProductId">Edit</a>
                                            <a class="btn btn-sm btn-outline-danger flex-fill" asp-controller="Products" asp-action="Delete" asp-route-id="@p.ProductId">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


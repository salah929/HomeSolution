<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    <link href="~/style.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css"
          integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>

</head>

<body>
    <nav class="navbar navbar-expand">
        <div class="navbar-container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/logo.png" alt="logo" class="logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            @{
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
            }

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Home" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Products" ? "active" : "")"
                           asp-controller="Products" asp-action="Index">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Customers" ? "active" : "")"
                           asp-controller="Customers" asp-action="Index">Customers</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Suppliers" ? "active" : "")"
                           asp-controller="Suppliers" asp-action="Index">Suppliers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "CustomerOrders" ? "active" : "")"
                           asp-controller="CustomerOrders" asp-action="Index">Orders from Customers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "SupplierOrders" ? "active" : "")"
                           asp-controller="SupplierOrders" asp-action="Index">Orders to Suppliers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Reports" ? "active" : "")"
                           asp-controller="Reports" asp-action="Index">Reports</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "About" ? "active" : "")"
                           asp-controller="About" asp-action="Index">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="body-container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/script.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
